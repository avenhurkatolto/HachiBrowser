<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/boards_row_image_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/boards_row_image_sfw"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:scaleType="fitCenter"
        android:layout_toRightOf="@id/boards_row_image_language"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/boards_row_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/boards_row_image_sfw" />

    <TextView
        android:id="@+id/boards_row_textview_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/boards_row_textview_name"
        android:layout_toRightOf="@id/boards_row_image_sfw" />

    <TextView
        android:id="@+id/boards_row_textview_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/boards_row_image_sfw"
        android:layout_below="@id/boards_row_textview_subtitle"
         />

</RelativeLayout>